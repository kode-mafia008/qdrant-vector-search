# Qdrant Vector Database Configuration
QDRANT__SERVICE__HTTP_PORT=6333
QDRANT__SERVICE__GRPC_PORT=6334

# API Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Ports (Host:Container)
API_PORT=8000
WEB_PORT=3000
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Storage Configuration
# Set to empty or comment out to disable local storage (S3-only mode)
QDRANT_STORAGE_PATH=./qdrant_storage

# S3 Storage Configuration (for snapshots and backups)
# Leave empty to use local storage only
# For AWS S3
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# For S3-compatible services (MinIO, DigitalOcean Spaces, etc.)
# Example: https://nyc3.digitaloceanspaces.com or http://localhost:9000
S3_ENDPOINT=
